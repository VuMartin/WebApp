<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>2025-fall-cs-122b-marjoe</display-name>

    <!-- Default page -->
    <welcome-file-list>
        <welcome-file>html/customer/login.html</welcome-file>
    </welcome-file-list>

    <!-- Database connection -->
    <resource-ref>
        <description>MySQL DataSource</description>
        <res-ref-name>jdbc/moviedb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Route for employee dashboard -->
    <servlet>
        <servlet-name>DashboardRedirect</servlet-name>
        <jsp-file>/html/employee/employeeLogin.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>DashboardRedirect</servlet-name>
        <url-pattern>/_dashboard</url-pattern>
    </servlet-mapping>

</web-app>